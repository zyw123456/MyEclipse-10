<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name></display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <listener>
    <listener-class>com.yzj.wf.am.security.context.SystemLoaderListener</listener-class>
  </listener>
  <listener>
    <listener-class>org.springframework.web.context.request.RequestContextListener</listener-class>
  </listener>
  <listener>
    <listener-class>org.springframework.security.web.session.HttpSessionEventPublisher</listener-class>
  </listener>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>/WEB-INF/xml-daos/dao-base.xml,
					/WEB-INF/xml-beans/bean-base.xml,
                   /WEB-INF/xml-actions/action-base.xml,                                     
                   /WEB-INF/xml-security/spring-security-base.xml      
      </param-value>
  </context-param>
  <servlet>
    <description></description>
    <display-name>TestMessageServlet</display-name>
    <servlet-name>TestMessageServlet</servlet-name>
    <servlet-class>com.sinoway.TestMessageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TestMessageServlet</servlet-name>
    <url-pattern>/TestMessageServlet</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>springSecurityFilterChain</filter-name>
    <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>springSecurityFilterChain</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>requestContextFilter</filter-name>
    <filter-class>org.springframework.web.filter.RequestContextFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>requestContextFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>JasperReportImageServlet</servlet-name>
    <servlet-class>net.sf.jasperreports.j2ee.servlets.ImageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>JasperReportImageServlet</servlet-name>
    <url-pattern>/servlets/image</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>struts2</filter-name>
    <filter-class>org.apache.struts2.dispatcher.ng.filter.StrutsPrepareAndExecuteFilter</filter-class>
    <init-param>
      <param-name>config</param-name>
      <param-value>  
          		struts-default.xml,struts-plugin.xml,
          		/xml-struts/struts-base.xml  
        	</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>struts2</filter-name>
    <url-pattern>*.action</url-pattern>
  </filter-mapping>
  <jsp-config>
    <taglib>
      <taglib-uri>/yongtree-tags</taglib-uri>
      <taglib-location>/WEB-INF/tlds/pageLinks.tld</taglib-location>
    </taglib>
  </jsp-config>
  <error-page>
    <error-code>404</error-code>
    <location>/404.jsp</location>
  </error-page>
  <error-page>
    <exception-type>com.yzj.wf.common.WFException</exception-type>
    <location>/wferror.jsp</location>
  </error-page>
  <error-page>
    <exception-type>java.lang.Exception</exception-type>
    <location>/500.jsp</location>
  </error-page>
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
  <servlet>
    <description></description>
    <display-name>HttpHandler</display-name>
    <servlet-name>HttpHandler</servlet-name>
    <servlet-class>com.sinoway.common.handler.HttpHandler</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>HttpHandler</servlet-name>
    <url-pattern>/HttpHandler</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>McpHttpServlet</display-name>
    <servlet-name>McpHttpServlet</servlet-name>
    <servlet-class>com.sinoway.common.handler.McpHttpServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>McpHttpServlet</servlet-name>
    <url-pattern>/McpHttpServlet</url-pattern>
  </servlet-mapping>
</web-app>