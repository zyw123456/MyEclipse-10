html,body {
	padding: 0 0 0 0;
	margin: 0 0 0 0;
	font: 10pt Arial, Myriad, Tahoma, Verdana, sans-serif;
}
#main {
	width: 100%; /* make the body expand to fill the visible window */
	height: 100%;
	overflow: hidden; /* erase window level scrollbars */
	padding: 0 0 0 0;
	margin: 0 0 0 0;
	font: 10pt Arial, Myriad, Tahoma, Verdana, sans-serif;
}

#top {
	padding: 0 0 0 0;
	margin: 0 0 0 0;
	height: 33px;
	overflow: hidden;
}

#top .nav_menu_logo {
	display: inline;
}

#top .nav_menu_nav {
	display: inline;
	line-height: 33px;
	position: absolute;
}

#top .nav_menu_right {
	display: inline;
	line-height: 33px;
	width: 220px;
	right: 0;
	position: absolute;
}

#top a {
	white-space: nowrap;
	text-decoration: none;
}

/*hack谷歌浏览器*/
@media screen and (-webkit-min-device-pixel-ratio:0) {
	.imgpos {
		top: -4px;
		position: relative;
	}
}

#footer {
	padding: 3px;
}

/*内容区布局开始*/
#indexmain {
	height: auto;
}

#leftindex {
	float: left;
	width: 190px;
	height: 100%;
	overflow: hidden;
	margin-right: 0px;
}

#leftindex select {
	width: 100%;
}

#leftindex.not_expand {
	display: none;
}

.left_search {
	padding-left: 10px;
}

.left_search_text {
	font-size: 12px;
	width: 122px;
	height: 26px;
	line-height: 26px;
	border: 0px;
	float: left;
	padding-left: 10px;
	border: 0px;
}

.left_search_btn {
	width: 30px;
	height: 26px;
	border: 0px;
	float: left;
}

#expandindex {
	float: left;
	width: 10px;
	height: 100%;
	cursor: pointer;
	padding: 0px 0px 0px 0px;
	margin: 0px 0px 0px 0px;
}

#expandindex table {
	height: 100%;
}

#expandindex table td {
	vertical-align: middle;
	margin: 0px 0px 0px 0px;
	padding: 0px 0px 0px 0px;
	width: 10px;
}

#rightindex {
	margin-left: 215px;
	height: 100%;
}

#rightindex.not_expand {
	margin-left: 11px;
}

.leftbizmenu {
	width: 100%;
	height: 50px;
	overflow: auto;
	margin: 0px auto 0 auto;
}

.leftbiznav {
	width: 95%;
	margin-top: 2px;
	margin-left: 2px;
}

.leftbiztree {
	width: 100%;
	overflow-x: auto;
	overflow-y: auto;
	margin-left: 0px;
	padding-top: 0px;
	margin-top: 0px;
}

.lefttaskmenu {
	width: 175px;
	height: auto;
	overflow: auto;
	margin: 10px auto 0 auto;
	position: relative;
	bottom: 5px;
	left: 2px;
}

.lefttaskmenu .title {
	font-size: 14px;
	font-weight: bold;
	padding: 2px 5px;
	height: 16px;
}

.lefttaskmenu .title a {
	float: right;
	margin-top: 4px;
}

.lefttaskmenu li {
	margin: 2px 2px;
	list-style: none outside none;
}

.lefttaskmenu a {
	margin-left: 5px;
	white-space: nowrap;
	text-decoration: none;
}

div.taskdiv {
	height: 180px;
	overflow: auto;
	border: 1px;
	border-style: solid;
}

div.taskdiv .taskdiv_ul{
	padding-left: 10px\0;/*hack ie8*/
	_margin-left: 10px;/*hack ie6*/
}

/*内容区布局结束*/
.customFolderOpenedIcon {
	background-repeat: no-repeat;
	width: 18px;
	height: 18px;
}

.customFolderClosedIcon {
	background-repeat: no-repeat;
	width: 18px;
	height: 18px;
}

.customLeafIcon {
	background-repeat: no-repeat;
	width: 18px;
	height: 18px;
}

/*预加载等待框*/
#preLoader {
	width: 100%;
	height: 100%;
	margin: 0;
	padding: 0;
	position: absolute;
	z-index: 999;
	padding: 0;
	position: absolute;
	top: 0;
	left: 0;
}
