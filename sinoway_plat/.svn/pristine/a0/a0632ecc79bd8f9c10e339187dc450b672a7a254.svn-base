body {
	color: #2f332a;
	font: 15px/21px Arial, Helvetica, simsun, sans-serif;
	background: #f0f6e4 \9;
}

h1,h2,h3,h4,h5,h6 {
	color: #2f332a;
	font-weight: bold;
	font-family: Helvetica, Arial, sans-serif;
	padding-bottom: 5px;
}

h1 {
	font-size: 24px;
	line-height: 34px;
	text-align: center;
}

h2 {
	font-size: 14px;
	line-height: 24px;
	padding-top: 5px;
}

h6 {
	font-weight: normal;
	font-size: 12px;
	letter-spacing: 1px;
	line-height: 24px;
	text-align: center;
}

a {
	color: #3C6E31;
	text-decoration: underline;
}

input.radio {
	margin: 0 2px 0 8px;
}

input.radio.first {
	margin-left: 0;
}

input.empty {
	color: lightgray;
}

code {
	color: #2f332a;
}

.highlight_red {
	color: #A60000;
}

.highlight_green {
	color: #A7F43D;
}

li {
	list-style: circle;
	font-size: 12px;
	border-bottom: 1px;
}

li.title {
	list-style: none;
}

div.wrap_tree_detail { /* 包含ul.ztree, div.detail, div.org_create */
	width: 1000px;
	height: 600px;
	margin-top: 20px;
	margin-left: 120px;
}

ul.ztree {
	float: left;
	margin-top: 30px;
	margin-left: 10px;
	width: 380px;
	height: 426px;
}

div.org_detail {
	float: right;
	width: 300px;
	margin-right: 451px;
	border: 1px solid #617775;
	margin-top: 30px;
	text-align: left;
	height: 435px;
} /*如果float属性是right,margin-right属性的调整才有效果。*/
div.org_create {
	border: 1px solid #617775;
	width: 300px;
	margin-top: -366px;
	margin-left: 300px;
	height: 435px;
}