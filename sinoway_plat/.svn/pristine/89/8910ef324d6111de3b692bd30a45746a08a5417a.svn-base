<script src="js/datatables/jquery.dataTables.js"></script>
<script type="text/javascript" language="javascript" class="init">
    $(document).ready(function(){
        var table = $('#manager3').DataTable( {
            searching:false,
            paging:false,
            pageLength: 7,
            "ordering": false,
            "lengthChange": false,
            "language": {
                "lengthMenu": "_MENU_ 条记录每页",
                "zeroRecords": "没有找到记录",
                "info": "第 _PAGE_ 页 ( 总共 _PAGES_ 页 )",
                "infoEmpty": "无记录",
                "infoFiltered": "(从 _MAX_ 条记录过滤)",
                "paginate": {
                    "previous": " < ",
                    "next": ">"
                }
            },
        } );
        var conheight =  $(window).height() - $(".top").height() - $(".foot").parent().height() - 40;
        var heightleft = $("#leftheight").height();
        var heightright = $("#rightheight").height();
        var realheight;
        realheight = heightleft > heightright?heightleft:heightright;
        if(conheight > realheight){
            $("#rightheight").css("min-height" ,conheight);
            $("#leftheight").css("min-height",conheight);
        };
    });
    $('#del').click(function () {
        table.row().remove().draw(false);
        $('#myModal1').modal('hide')

    });
    $(".cancel").click(function(){
        $("#firststep").hide();
        $("#nextstep").hide();
    });
    $("#next").click(function(){
        $("#firststep").hide();
        $("#nextstep").show();
        var conleftheight = $("#left-content").height();
        var conrightheight = $("#right-content").height();
        var conminheight;
        conminheight = conleftheight > conrightheight ? conleftheight:conrightheight;
        $("#left-content").css("min-height",conminheight + "px");
        $("#right-content").css("min-height",conminheight + "px");
    });
    $("#newcreat").click(function(){
        $("#firststep").show();
    });
</script>
