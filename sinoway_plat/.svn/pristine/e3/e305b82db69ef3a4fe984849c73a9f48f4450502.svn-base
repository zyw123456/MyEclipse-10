html {
	height: 100%;
}

body {
	height: 100%;
	padding: 0;
	margin: 0;
	overflow: auto;
	font-size: 12px;
}

a {
	TEXT-DECORATION: none
}

input {
	font-size: 12px;
}

select {
	font-size: 12px;
}

input[type=button] {
	margin-top: 0px;
	margin-bottom: 0px;
	margin-left: 5px;
	margin-right: 5px;
	padding-left: 5px;
	padding-right: 5px;
	height:1.6em;
	text-align: center;
	vertical-align: middle;
}

.frame {
	width: 1000px;
	margin: 0 auto;
}

.sharp {
	width: 100%;
	margin-top: 19px;
	position: relative;
}

.content {
	padding-top: 16px;
	padding-left: 10px;
	padding-right: 10px;
	border-right: 1px solid;
	border-left: 1px solid;
	overflow: hidden;
}

.head {
	position: absolute;
	left: 10px;
	top: -14px;
	width: 140px;
	height: 29px;
	overflow: hidden;
	background-image: url("../../images/cp-tag/titlebg.png");
	background-repeat: no-repeat;
	line-height: 29px;
	padding: 0px;
}

.head span {
	padding-left: 35px;
}

.requirement .requirement_name {
	margin-right: 5px;
	font-size: 12px;
}

#condition_requirement .requirement {
	float: left;
	text-align: right;
	width: 210px;
	height: 26px;
}

#condition_requirement .requirement input {
	width: 120px;
	height: 22px;
}

#condition_requirement .requirement select {
	width: 120px;
	height: 22px;
}

#condition_submit {
	
}

#con_cont {
	margin-top: 0;
	margin-left: 0;
	margin-right: auto;
	background: #f4f7f9;
	width: 98%;
	text-align: right;
}

#con_cont table tr:HOVER {
	cursor: pointer;
}

#con_cont table tr td {
	padding-top: 8px;
	padding-bottom: 8px;
	white-space: nowrap;
	font-size: 12px;
}

#tab_div {
	width: 100%;
	overflow: auto;
}

#con_tab {
	text-align: center;
	width: 100%;
	height: auto;
	padding-top: 0px;
	padding-left: 4px;
	padding-bottom: 0px;
}

.extra_row {
	text-align: left;
	width: 100%;
	height: auto;
	padding-top: 0px;
	padding-left: 4px;
	padding-bottom: 8px;
	width: 100%;
}

.extra_row tr td {
	border-left: none;
	border-top: none;
	border-bottom: #ccc 1px solid;
	border-right: none;
	background: #C8CCFF;
}

td {
	padding-top: 2px;
	padding-bottom: 2px;
}

.tr_top td {
	height: 30px;
	padding: 0px;
	background: url("../../images/cp-tag/bar.png") no-repeat center;
	border-left: none;
	border-top: none;
	border-bottom: #ccc 1px solid;
	border-right: none;
}

.tr_top td a,.tr_top td input {
	display: none;
}

.tr_top td .headertext { /* padding-left: 1.2em; */
	display: block;
}

.tr_odd td .headertext,.tr_even td .headertext {
	display: none;
}
  
.arrows_up .headertext {
	padding-left: 1.2em;
	background: url("../../images/cp-tag/bar_up.jpg") no-repeat left;
	background-position: -10px;
}
  
.arrows_down .headertext {
	padding-left: 1.2em;
	background: url("../../images/cp-tag/bar_down.jpg") no-repeat left;
	background-position: -10px;
}

.tr_odd td {
	border-left: none;
	border-top: none;
	border-bottom: #ccc 1px solid;
	border-right: none;
	background: #FFF;
}

.tr_even td {
	border-left: none;
	border-top: none;
	border-bottom: #ccc 1px solid;
	border-right: none;
	background: #f3f3f5;
}

.tr_checked td {
	background: #ffe1a1;
}

hr {
	border-width: 0;
	height: 2px;
	background-color: #ccc;
}

#navigation table {
	width: 100%;
	margin-left: 10px;
	margin-right: 10px;
}

#paging_show {
	text-align: left;
}

#paging_jump {
	text-align: right;
}

#currentPage {
	width: 30px;
	height: 20px;
}

.white_overlay {
	position: absolute;
	display: none;
	left: 0%;
	top: 0%;
	width: 100%;
	height: 100%;
	z-index: 1000;
	-moz-opacity: 0.4;
	opacity: .40;
	filter: Alpha(Opacity = 30);
	background-color: #FFFFFF;
}

.operateDiv {
	display: none;
	position: absolute;
	top: 150;
	left: 30%;
	width: 350px;
	height: auto;
	padding: 16px;
	border: 2px solid grey;
	background-color: white;
	z-index: 1002;
	overflow: auto;
}

.operateDiv .requirement {
	text-align: right;
	width: 300px;
	height: 26px;
}

.operateDiv .requirement input {
	width: 160px;
}

.operateDiv .requirement select {
	width: 160px;
}

.promptDiv {
	text-align: center;
	margin-right: auto;
	margin-left: auto;
}

.buttonsDiv {
	text-align: center;
}

#openOperateDiv {
	display: none;
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	padding: 0;
	border: 0;
	background-color: white;
	z-index: 1002;
	overflow: auto;
}

#openIframe {
	position: relative;
	top: 0;
	left: 0;
	width: 100%;
	padding: 0;
	border: 0;
	background-color: white;
	z-index: 1002;
	overflow: auto;
}

/*上圆角框通用设置样式，如果要运用多个不同颜色，以下6句不用重新变化--------------------------------*/
.b1,.b2,.b3,.b4,.b5,.b6,.b7,.b8 {
	height: 1px;
	font-size: 1px;
	overflow: hidden;
	display: block;
}

.b1,.b8 {
	margin: 0 5px;
}

.b2,.b7 {
	margin: 0 3px;
	border-right: 2px solid;
	border-left: 2px solid;
}

.b3,.b6 {
	margin: 0 2px;
	border-right: 1px solid;
	border-left: 1px solid;
}

.b4,.b5 {
	margin: 0 1px;
	border-right: 1px solid;
	border-left: 1px solid;
	height: 2px;
}

.content {
	border-right: 1px solid;
	border-left: 1px solid;
	overflow: hidden;
	background: #0000;
}
/*颜色方案一,蓝色边框----------------------------------------*/
/*下面第一、二句决定边框颜色，第三句决定背景颜色*/
/*边框色*/
.color1 .b2,.color1 .b3,.color1 .b4,.color1 .b5,.color1 .b6,.color1 .b7,.color1 .content
	{
	border-color: #ccc;
}

.color1 .b1,.color1 .b8 {
	background: #ccc;
}
/*背景色*/
.color1 .b2,.color1 .b3,.color1 .b4,.color1 .b5,.color1 .b6,.color1 .b7,.color1 .content
	{
	background: #F4F7F9;
}